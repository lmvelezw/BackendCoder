<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users</title>
  </head>
  <body>

    <form action="/api/sessions/users" method="post">
      <button type="submit">Delete All Inactive Users</button>
    </form>

    {{#each users}}
      <ul>
        <li>{{this.first_name}} {{this.last_name}}</li>
        <li>{{this.email}}</li>
        <li>{{this.role}}</li>
      </ul>
    {{/each}}

  </body>
</html>